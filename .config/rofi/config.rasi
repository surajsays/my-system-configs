@theme "/home/suraj/.config/rofi/themes/rounded-pink-dark.rasi"

* {
    bg4: #2D353BAA;
    bg5: #9cadabc2;
    bg6: #7A879059;
    bg7: #A3B2BD23;
    fg4: #C4C4C4;
}



configuration {
    show-icons: true;
    drun-display-format: "{name}";
}





configuration {
    show-icons: true;
}


window {
    background-color: @bg4;
    border: 2px;
    border-color: @bg5;
}

inputbar {
    background-color: @bg7;
    border-color: @bg5;
}

entry {
    placeholder-color: @fg4;
}

listview {
    fixed-height: true;
}

element normal active {
    text-color: @bg5;
}

element selected normal, element selected active {
    background-color:   @bg5;
}

prompt {
    enabled: false;
}
